<UserControl x:Class="ResistorCalculator.TriangleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="20"
             Height="35"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             d:DesignHeight="39"
             d:DesignWidth="30"
             mc:Ignorable="d">
    <Grid Height="35">
        <Polygon Fill="Black"
                 Points="0,0 20,0 10,15"
                 Stroke="Red"
                 StrokeThickness=".5" />
        <Polygon Fill="Black"
                 Points="0,0 10,35 10,15"
                 Stroke="Red"
                 StrokeThickness=".5" />
        <Polygon Fill="Black"
                 Points="20,0 10,35 10,15"
                 Stroke="Red"
                 StrokeThickness=".5" />
    </Grid>
</UserControl>
